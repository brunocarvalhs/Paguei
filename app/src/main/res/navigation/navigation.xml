<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="br.com.brunocarvalhs.payflow.features.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="br.com.brunocarvalhs.payflow.features.home.HomeFragment"
        android:label="fragment_costs_list"
        tools:layout="@layout/fragment_costs_list">
        <action
            android:id="@+id/action_homeFragment_to_itemListDialogFragment"
            app:destination="@id/itemListDialogFragment" />
        <action
            android:id="@+id/action_homeFragment_to_extractFragment"
            app:destination="@id/extractFragment" />
        <argument
            android:name="user"
            app:argType="br.com.brunocarvalhs.data.model.UserModel" />
    </fragment>

    <dialog
        android:id="@+id/itemListDialogFragment"
        android:name="br.com.brunocarvalhs.payflow.features.home.ItemListDialogFragment"
        android:label="fragment_item_list_dialog_list_dialog"
        tools:layout="@layout/fragment_item_list_dialog_list_dialog">


    </dialog>

    <fragment
        android:id="@+id/extractFragment"
        android:name="br.com.brunocarvalhs.payflow.features.home.ExtractFragment"
        android:label="fragment_extract_list"
        tools:layout="@layout/fragment_extract_list" />

</navigation>